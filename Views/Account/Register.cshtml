@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 mt-5">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0">Create Account</h3>
                <small class="text-light">Join the fun</small>
            </div>
            <div class="card-body bg-dark">
                <form id="register-form">
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text"
                               class="form-control"
                               id="firstName"
                               name="firstName"
                               placeholder="Tyler"
                               required />
                    </div>

                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text"
                               class="form-control"
                               id="lastName"
                               name="lastName"
                               placeholder="Stephens"
                               required />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email"
                               class="form-control"
                               id="email"
                               name="email"
                               placeholder="you@example.com"
                               required />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password"
                               class="form-control"
                               id="password"
                               name="password"
                               placeholder="Choose a strong password"
                               required />
                    </div>

                    <div id="register-message" class="mb-2 small"></div>

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-success">
                            Create Account
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-secondary text-center">
                <small>
                    Already have an account?
                    <a href="/Account/Login" class="text-white text-decoration-underline">
                        Login here
                    </a>
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById("register-form");
            const messageDiv = document.getElementById("register-message");

            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                messageDiv.textContent = "";
                messageDiv.classList.remove("text-danger", "text-success");

                const firstName = document.getElementById("firstName").value;
                const lastName = document.getElementById("lastName").value;
                const email = document.getElementById("email").value;
                const password = document.getElementById("password").value;

                const body = new URLSearchParams({
                    FirstName: firstName,
                    LastName: lastName,
                    Email: email,
                    Password: password
                });

                try {
                    const response = await fetch("/api/user/register", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/x-www-form-urlencoded"
                        },
                        body: body.toString()
                    });

                    if (response.status === 409) {
                        messageDiv.classList.add("text-danger");
                        messageDiv.textContent = "Email is already in use.";
                        return;
                    }

                    if (!response.ok) {
                        messageDiv.classList.add("text-danger");
                        messageDiv.textContent = "Registration failed. Check your input and try again.";
                        return;
                    }

                    messageDiv.classList.add("text-success");
                    messageDiv.textContent = "Account created! Redirecting to login...";

                    setTimeout(() => {
                        window.location.href = "/Account/Login";
                    }, 1000);
                } catch (err) {
                    console.error(err);
                    messageDiv.classList.add("text-danger");
                    messageDiv.textContent = "An error occurred while registering.";
                }
            });
        });
    </script>
}